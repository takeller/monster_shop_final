<%= form_for [:merchant, @bulk_discount] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :item_threshold %>
  <%= f.number_field :item_threshold, min: 1 %><br>

  <%= f.label :discount %>
  <%= f.number_field :discount, min: 1, max: 95, step: 0.5 %><br>

  <%= f.submit "Update Discount" %>
<% end %>
