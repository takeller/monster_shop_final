<h1>My Discounts<h1>
<%= link_to "New Discount", merchant_new_bulk_discount_path %>
<% @bulk_discounts.each do |bulk_discount| %>
  <section id="discount-<%= bulk_discount.id %>">
    <ul>
      <li>Name: <%= bulk_discount.name %></li>
      <li>Item Threshold: <%= bulk_discount.item_threshold %></li>
      <li>Discount Amount: <%= bulk_discount.discount %></li>
      <li> <%= link_to "Edit Discount", merchant_edit_bulk_discount_path(bulk_discount.id) %></li>
      <li> <%= link_to "Destroy Discount", merchant_bulk_discount_path(bulk_discount), method: :delete %> </li>
    </ul>
  </section>
<% end %>
